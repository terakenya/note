= render "header"
  .main_contents
    .note-container.space--under-header
      .note-content
        .textnote
          .note-cover-img
            = image_tag @article.image
          .note-title
            %h1.editable.title-wrapper
              = @article.title
          .note-header
            .p-articleNoteInfo.note-user-name
              .p-articleNoteInfo__user
                =render "userinfoIcon"
              .p-articleNoteInfo__status
                = link_to '編集', "/articles/#{params[:id]}/edit", method: :get
              .p-articleNoteInfo__status
                = link_to "削除", params[:id],method: :delete

          .note-body
            .body-wrapper
              %p.note-body
                = @article.text

        .p-supportFunding
          %p.p-supportFunding__heading
            この記事が気に入ったら、サポートをしてみませんか？ 気軽にクリエイターを支援できます。
          .p-supportFunding__body
            .p-supportFunding__contents
              .p-supportFunding__button
                .u-alignCenter
                  .renewal-c-button--primaryMedium
                    .u-flexboxCenter
                      %i.renewal-p-icon--present
                        サポートする
        .renewal-c-article__action
          .renewal-p-action
            %ul
              %li
                %i.fa.fa-heart-o.fa-1x
                %i.fa.fa-plus.fa-1x



    .p-comments
      .p-comments__container
        .p-comments__body
          .p-comments__add
            .p-comments__input
              = render partial: 'comment', collection: @comments
              .p-comments__inputAvatar
                .c-avatar--small
                  .c-avatar__img
                    %img.c-avatar__img{:alt => "", "data-src" => "https://d2l930y2yx77uc.cloudfront.net/assets/default/default_profile-2f533b6a0048b61b8d761198d14cbb4c603f89edb03577f061efc7393b85d811.png", :src => "https://d2l930y2yx77uc.cloudfront.net/assets/default/default_profile-2f533b6a0048b61b8d761198d14cbb4c603f89edb03577f061efc7393b85d811.png", :style => "", :title => ""}/
              .p-comments__inputMessage
                = form_for([@article, @comment]) do |f|
                  = f.text_field :text, class: "commentform", placeholder: 'コメント'
                  =f.submit '送信' ,class: 'c-button__label'
                .p-comments__inputAction
                  .p-comments__inputButton
                    .c-button--size_small



