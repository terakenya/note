= form_for @article do |f|
  .main
    .header-new
      .header-new__inner
        %h2.logo
          note
        .account-menu
          %ul.inline-wrap
            %li.inline-child
              .btn-small-left
                = f.submit '公開設定', class: 'sendbutton'

            %li.inline-child
              .btn-small-right
                = link_to articles_path do
                  キャンセル

    .editor-screen
      .p-editorTips
        .p-editorTips__btn
          .c-button__icon
          %i.fa.fa-lightbulb.fa-1x
          .c-button__label
          %span.c-button__label
            ノートヒント
      .note-container
        .fude-content
          .note
            .iconxlarge
              = fa_icon 'picture-o', class: 'icon'

              .renewal-c-popover-renewal-c-popover--selectEyecatch
                %ul
                  %li.new-popover
                    .galally
                      .renewal-p-icon--stockPhoto
                        = image_tag 'imagesmall.png',class:"imagesmall",align:"center"
                        みんなのフォトギャラリー(β)から画像を挿入
                  %li.new-popunder
                    .tes
                      .renewal-p-icon--eyecatchUpload
                        = image_tag 'screen.png',class:"imagebig",align:"center"
                          =f.label :image, class: "icon" do
                            = fa_icon 'picture-o', class: 'icon'
                              = f.file_field :image, class: 'imageform', style: 'display:none'
                                画像をアップロード

                =f.label :image, class: "icon" do
                = fa_icon 'picture-o', class: 'icon'
                = f.file_field :image, class: 'imageform', style: 'display:none'



            .note-name
              %h1
                = f.text_field :title, class: "titleform", placeholder: 'ノートタイトル'
            .note-body
              .body-wrapper
                %OeiGn
                = f.text_area :text, class: "contentform", placeholder: 'ノート本文',autocomplete: 'off'
            .embed-toolbar
              %ul.embed-toolbar-buttons
                %li{:style => "display: list-item;"}
                  %button#embed-toolbar-open.button-circle.plus{:type =>"button"}
                    %i.renewal-p-icon--editorAdd
                      ＋
                %li
                  %button#embed-toolbar-open.button-circle.image#image{:type =>"button"}
                    %i.renewal-p-icon--editorAdd
                      x
                %li
                  %button#embed-toolbar-open.button-circle.mainasu#mainasu{:type =>"button"}
                    %i.renewal-p-icon--editorAdd
                      =f.label :image, class: "icon" do
                        img
            / .note-body
            /   .body-wrapper
            /     %OeiGn
            /     %textarea{:cols => "40", :name => "text", :rows => "4", :class => "contentform", :placeholder=> 'text'}





