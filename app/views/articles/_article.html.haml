.feeds
  .feed
    .renewal-l-main
      .renewal-c-card
        .renewal-c-card__head
          = render partial: "articles/userinfoIcons", locals: {article: article}

        .renewal-c-card__body
          .renewal-p-cardItem
            .renewal-p-cardItem__eyecatch
              .renewal-p-cardItem__eyecatch.img
                = image_tag article.image
            %h3.renewal-p-cardItem__title
              = article.title
            %p.renewal-p-cardItem__description
              = article.text
            .renewal-p-cardItem__more
              = link_to article_path(article.id), class: 'motto-miru' do
                もっと見る

        .renewal-c-card__foot
          .renewal-p-action
            %ul
              %li.majide
                %span{id: "like-of-#{article.id}"}
                  = render partial: 'likes/like', locals: { article: article, likes: @likes }
                = image_tag 'yajirushi.png',class:"yajirushi-10"
                = image_tag 'plus2.png',class:"plus2-10"
                / = image_tag 'menu.png',class:"menu-10"
                .renewal-p-action__comment
                  = link_to article_path(article.id), class: 'comment-suru' do
                    コメントする
