= render "header_top"
= form_for([@article, @comment]) do |f|
  .main_contents
    .note-container.space--under-header
      .note-content
        .textnote
          .note-cover-img
            = image_tag @article.image
          .note-title
            %h1.editable.title-wrapper
              = @article.title
          .note-header
            .p-articleNoteInfo.note-user-name
              .p-articleNoteInfo__user
                = render partial: "userinfoIcon", locals: {article: @article}
              .p-articleNoteInfo__edit
                - if user_signed_in? && current_user.id == @article.user_id
                  = link_to '編集', "/articles/#{params[:id]}/edit", method: :get, class: 'edit'

          .note-body
            .body-wrapper
              %p.note-body
                = @article.text

        .p-supportFunding
          %p.p-supportFunding__heading
            この記事が気に入ったら、サポートをしてみませんか？ 気軽にクリエイターを支援できます。
          .p-supportFunding__body
            .p-supportFunding__contents
              .p-supportFunding__button
                .u-alignCenter
                  .renewal-c-button--primaryMedium
                    .u-flexboxCenter
                      %i.renewal-p-icon--present
                      = image_tag 'present.png',class:"present-30"
                      .supporting
                        サポートする
        .renewal-c-article__action
          .renewal-p-action
            %ul
              %li
                %span{id: "like-of-#{@article.id}"}
                  = render partial: 'likes/like', locals: { article: @article, likes: @likes }
                = image_tag 'plus2.png',class:"plus2-30"



    .p-comments
      .p-comments__container
        .p-comments__title
          コメント
          = render partial: 'comment', collection: @comments
        .p-comments__add
          .p-comments__input
            .p-comments__inputAvatar
              .c-avatar--small
                .c-avatar__img
                  -if @article.user.usericon.present?
                    = image_tag @user.usericon,class:'commenticon'
                  -else
                    = image_tag "smile.png",class:'smileicon-10'
            .p-comments__inputMessage
              = f.text_area :text, class: "commentform", placeholder: 'コメントする...',autocomplete: "off"
            .p-comments__inputAction
              .p-comments__inputButton
                .c-button--size_small
                  =f.submit '送信' ,class: 'submit-comment'




